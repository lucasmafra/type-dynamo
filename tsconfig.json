{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "type-dynamo": [
        "./src"
      ]
    },
    "strict": true,
    "lib": [
      "es2015", "dom"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      "typing/*.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "playground"
  ]
}